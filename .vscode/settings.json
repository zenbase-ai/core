{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "py/.venv/": true,
    "py/**/__pycache__": true,
    "py/.pytest_cache/": true
  },
  "python.defaultInterpreterPath": "py/.venv/bin/python",
  "python.analysis.extraPaths": [
    "./py/src"
  ],
  "python.testing.pytestArgs": [
    "py"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true
}
